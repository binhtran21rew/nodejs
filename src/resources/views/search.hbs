            <label for="search-input">Name</label>
            <input type="text" name="name" class="form-control" id="search-input"  placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="gender-input">Gioi tinh</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">--Gender--</option>
                <option value="male">Nam</option>
                <option value="female">Nu</option>

            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Search</button>
</form>
</div>